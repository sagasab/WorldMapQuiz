<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/quiz_app_logo"
        android:src="@drawable/quiz_logo" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/quizmaster"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Start Quiz Button -->
    <Button
        android:id="@+id/startQuizButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appNameTextView"
        android:layout_marginTop="24dp"
        android:text="@string/start_quiz"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startQuizButton"
        android:layout_marginTop="12dp"
        android:text="@string/settings"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />

    <!-- High Scores Button -->
    <Button
        android:id="@+id/highScoresButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsButton"
        android:layout_marginTop="12dp"
        android:text="@string/high_scores"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />

    <!-- Share App Button -->
    <Button
        android:id="@+id/shareAppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoresButton"
        android:layout_marginTop="12dp"
        android:text="@string/share_app"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />

</RelativeLayout>
